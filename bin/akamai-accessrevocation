standard_library.install_aliases()

if sys.version_info[0] >= 3:
    # python3
    from urllib.parse import urljoin
else:
    pass
    # python2.7
    # from urlparse import urljoin


def main():
    """ Processes the right command (list-configs, get-configs, acknowledge-cidrs) """
    if config.command == "list-tokens":
        # Get the list of policies in JSON format for the given network
        if hasattr(config, 'accountSwitchKey'):
            identifierList = listidentifiers(config.blacklistId, config.accountSwitchKey)
        else:
            identifierList = listidentifiers(config.blacklistId)
        formatOutputIdentifiersList(identifierList, config.output_type)

    elif config.command == "list-blacklist":
        # Get the list of policies in JSON format for the given network
        if hasattr(config, 'accountSwitchKey'):
            blacklistList = listblacklist(config.accountSwitchKey)
        else:
            blacklistList = listblacklist()
        formatOutputBlackList(blacklistList, config.output_type)

    elif config.command == "get-token-details":
        if hasattr(config, 'accountSwitchKey'):
            identifierList = getidentifier(
                config.blacklistId, config.tokenID, config.accountSwitchKey)
        else:
            identifierList = getidentifier(config.blacklistId, config.tokenID)

        formatOutputIdentifierList(identifierList, config.output_type)

    elif config.command == "get-configlist":
        if hasattr(config, 'accountSwitchKey'):
            arlblacklist = getblack_list_arls(
                config.blacklistId, config.accountSwitchKey)
        else:
            arlblacklist = getblack_list_arls(config.blacklistId)
        formatOutputConnectorList(arlblacklist, config.output_type)

    elif config.command == "get-token-count":
        if hasattr(config, 'accountSwitchKey'):
            blacklist_count = getblack_list_count(
                config.blacklistId, config.accountSwitchKey)
        else:
            blacklist_count = getblack_list_count(config.blacklistId)
        formatOutputBlackListCount(blacklist_count, config.output_type)

    elif config.command == "revoke-token":
        f = open(config.file.name, 'r')
        data = json.load(f)
        # Very Important since when you read it will be in single quotes, it need to be dumped to json and strings are only valid only in double quotes
        json_string = json.dumps(data)
        print(json_string)
        if hasattr(config, 'accountSwitchKey'):
            updateResponse = revoke_token(json_string, config.blacklistId, config.accountSwitchKey)
        else:
            updateResponse = revoke_token(json_string, config.blacklistId)
        formatOutputRevocationResp(updateResponse)

    else:
        pass


if __name__ == "__main__":
    main()
